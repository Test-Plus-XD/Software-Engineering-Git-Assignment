{
  "name": "ai-annotation-tool-v2",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --webpack",
    "build": "next build --webpack",
    "start": "next start",
    "lint": "eslint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:db": "mocha test/database.test.js --timeout 10000",
    "test:db:seeding": "mocha test/database-seeding.test.js --timeout 10000",
    "test:db:all": "mocha test/database*.test.js --timeout 10000",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:ci": "jest --ci --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:components": "jest app/components",
    "db:init": "node database/init.js",
    "db:migrate": "node database/migrations/run-migrations.js",
    "db:seed": "node database/seeds/run-seeds.js",
    "db:reset": "rm -f database/annotations.db && npm run db:init",
    "db:hardreset": "rm -f database/annotations.db && npm run db:migrate && npm run db:seed"
  },
  "dependencies": {
    "better-sqlite3": "^12.5.0",
    "better-sqlite3-proxy": "^2.11.3",
    "firebase": "^12.7.0",
    "form-data": "^4.0.5",
    "next": "16.1.0",
    "node-fetch": "^3.3.2",
    "npm-check-updates": "^19.2.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-wavify": "^1.11.1",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@fast-check/jest": "^2.1.1",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-plugin-react-compiler": "1.0.0",
    "chai": "^4.3.10",
    "eslint": "^9",
    "eslint-config-next": "16.1.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.3.0",
    "mocha": "^11.7.5",
    "msw": "^2.12.4",
    "playwright": "^1.57.0",
    "supertest": "^7.1.4",
    "tailwindcss": "^4",
    "typescript": "^5",
    "whatwg-fetch": "^3.6.20"
  }
}
